generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id           Int     @id @default(autoincrement())
  name         String
  image        String?
  position     String
  number       Int
  birthdayYear Int
  height       Float

  teamName String
  team   Team @relation(fields: [teamName], references: [name])

  @@map("players")
}

model Team {
  id              Int     @id @default(autoincrement())
  name            String  @unique
  fansbackground  String
  shield          String
  foundationYear  Int
  uniformHome     String
  uniformAway     String
  color1         String
  color2         String
  stadiumName     String?
  stadiumImage    String?
  anthem          String
  games           Int?
  wins            Int?
  draws           Int?
  losses          Int?
  points          Int?
  goalsFavor      Int?
  goalsOwn        Int?
  goalsDifference Int?

  players Player[]
  users   User[]

  @@map("teams")
}

model Title {
  id       Int    @id @default(autoincrement())
  name     String
  imageUrl String

  @@map("titles")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  teamFavoriteId Int?
  teamFavorite   Team? @relation(fields: [teamFavoriteId], references: [id])

  @@map("users")
}

model Game {
  id        Int      @id @default(autoincrement())
  homeTeam  String
  awayTeam  String
  homeGoals Int
  awayGoals Int
  date      String

  @@map("games")
}
