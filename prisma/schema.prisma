generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id              Int @id @default(autoincrement())
  name String
  image String ?
  position String
  number String
  birthday String
  teamId String
  height Float  
}

model Team {
  id              Int    @id @default(autoincrement())
  name            String
  fansbackground  String
  shield          String
  foundationYear  Int
  uniform         String
  stadiumImage    String
  anthem          String
  titles          String
  games           Int?
  wins            Int?
  draws           Int?
  losses          Int?
  points          Int?
  goalsFavor      Int?
  goalsOwn        Int?
  goalsDifference Int?

  @@map("teams")
}

model User {
  id             Int    @id @default(autoincrement())
  name           String
  email          String @unique
  password       String
  teamFavoriteId Int?

  @@map("users")
}
